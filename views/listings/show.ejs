<% layout('layouts/boilerplate') %>
    <script>
        let GoogleMap = "<%= process.env.GOOGLE_MAP_TOKEN || '' %>";
        let listing = <%- JSON.stringify(listing) %>;
    </script>
    <div class="row">
        <br>
        <div class="col-8 offset-2" >
            <h4 style="text-align: center; margin-top: 1rem; margin-bottom: 0.5rem;"> <b><%= listing.title %></b></h4>
        </div>

        <div class="card listing-card col-lg-6 offset-lg-3">
            <img src="<%= listing.image.url%>" class="card-img-top show-img" alt="image">
            <br>
            <div class="card-body">
                <p><i><b>Owned by : <%=listing.owner.username%></b></i></p>
                <p>
                    <%= listing.description %> <br>
                    &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
                    <%= listing.location %> <br>
                    <%= listing.country %>
                </p>
                <%if(currUser && currUser._id.equals(listing.owner._id)){%>
                    <div class="show-btn">
                        <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary" style="background-color: #fe424d; width: 7rem;">Edit</a>
                        <form method="post" action="/listings/<%=listing._id%>?_method=DELETE">
                            <button class="btn btn-primary offset-md-8" style="background-color: black; width: 8rem; white-space: nowrap; writing-mode: horizontal-tb;">Delete</button>
                        </form>
                    </div>
                <%}%>
                <%if(currUser){%>
                <hr>
                    <h4>Leave a review</h4>
                    <form action="/listings/<%= listing._id %>/reviews" novalidate class="needs-validation" method="POST">
                        <div class="mb-3 mt-3">
                            <p>Rating</p>
                            <fieldset class="starability-slot">
                                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>
                            </fieldset>
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="comment" class="form-label">Comment</label>
                            <textarea name="review[comment]" class="form-control" id="comment" cols="35" rows="3" required></textarea>
                            <div class="valid-feedback">Looks Good</div>
                            <div class="invalid-feedback">Please enter comment</div>
                        </div>
                        <div class="mb-3 mt-3">
                            <button class="btn btn-outline-dark offset-md-5">Submit</button>
                        </div>
                    </form>
                <%}%>

                <%if(listing.reviews.length>0){%>
                    <hr>
                    <p><b>All Reviews</b></p>
                    <div class="row">
                        <%for(review of listing.reviews){%>
                        <div class="card col-5 mb-2 ms-4  me-4">
                            <div class="card-body">
                                <h6 class="card-title"><b>@<%= review.author.username%></b></h6>
                                <p class="starability-result" data-rating="<%=review.rating%>"> </p>
                                <p class="card-text"> <%=review.comment%> </p>
                                <%if(currUser && review.author._id.equals(currUser._id)){%>
                                    <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                        <button class="btn btn-dark mb-3">Delete</button>
                                    </form>
                                <%}%>
                            </div>
                        </div>
                        <%}%>
                    </div>
                <%}%>
                <div class="mb-3 mt-3" >
                    <h5><b>Here you'll be</b></h5>
                    <hr>
                    <div id="map"></div>
                </div>    
            </div>            
        </div>        
    </div>
    <script src="/js/map.js"></script>

    
    